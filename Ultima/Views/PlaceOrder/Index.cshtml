                console.log(id);
               
                addItemToCartInd(id, 1);
                displayCart();
            })


            function addItemToCartInd(id, count)
            {
               
                for (var i in cart)
                {

                    if (parseInt(cart[i].id) === parseInt(id))
                    {
                        cart[i].count += count;
                        cart[i].total = cart[i].count * cart[i].price
                        saveCart();
