            function removeItemFromCart(id) {
                //removes one item
                for (var i in cart) {
                    if (parseInt(cart[i].id) === parseInt(id)) {
                        cart[i].count -= 1;
                        cart[i].total = cart[i].count * cart[i].price;
                        if (cart[i].count === 0) {
                            cart.splice(i, 1);
                        }
                        break;
                    }
                }
                saveCart();
            }

            function removeItemFromCartAll(id) {
                //removes all item id
                var x = "nnn" + id;
                console.log(x);
                for (var i in cart) {
                    console.log(cart[i].id);
                    console.log(id);
                    if (parseInt(cart[i].id) === parseInt(id)) {
                        console.log("reached  here");
                        cart.splice(i, 1);
                        break;
                    }

                }

                saveCart();
            }

            function clearCart() {
                cart = [];
                saveCart();
            }

            function countCart() {
                //->return total count
                var totalcount = 0;
                for (var i in cart) {
                    totalcount += cart[i].count;
                }
                return totalcount;
            }

            function saveCart() {
                console.log("save");
                // localStorage.setItem("shoppingCart", JSON.stringify(cart))
                $.cookie("shoppingCart", JSON.stringify(cart));
            }

            function displayCart() {
                var cartArray = listCart();
                var output = "<div width='200px' align='center'><table class='table table-striped' > <th>Sl</th><th>Part No</th><th>Qty X Price</th><th>Total</th><th>Options</th>";

                for (var i in cartArray) {
                    var index = parseInt(i) + 1;
                    console.log(i);
                    output += "<tr>"
                        + "<td>" +index + "</td> "
                        + "<td> "
                        + cartArray[i].name + "</td><td> "
                        + cartArray[i].count
                        + " x " + cartArray[i].price + "</td><td>"
                        + " " + cartArray[i].total + "</td><td>"
                        + "<button class='plus-item' data-id='" + cartArray[i].id + "'>+</button>"
                        + "<button class='subtract-item' data-id='" + cartArray[i].id + "'>-</button>"
                        + "<button class='delete-item' data-id='" + cartArray[i].id + "'>X</button>"
                        + "</td></tr></div>";
                }
                output += "</table>";

                if (cartArray.length > 0) {
                    $("#show-cart").html(output);
                    $("#total-cart").html(totalCart());
                }
                else
                {
                    $("#show-cart").html('');
                    $("#total-cart").html('');
                }
            }

            function totalCart() {
                //->return total cost
                var totalCost = 0;
                for (var i in cart) {
                    totalCost += cart[i].price * cart[i].count;
                }
                return totalCost.toFixed(2);
            }


            function listCart()
            {
                //->array of item
                var cartCopy = [];
                for (var i in cart)
                {                  
                    var item = cart[i];
                    var itemCopy = {};
                    for (var p in item)
                    {
                        itemCopy[p] = item[p];
                    }
                    cartCopy.push(itemCopy);
                }
                return cartCopy;
            }


